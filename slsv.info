screenshot  = screenshot.png
description = Drupal the for <a href="http://www.slsv.org">SLSV</a>.
core        = 7.x

; The stylesheet.
stylesheets[all][] = css/styles.css


; JavaScripts
scripts[] = js/bootstrap.min.js
scripts[] = js/custom.js
scripts[] = js/jquery.plugins.min.js

; Regions
regions[header]      = Header
regions[help]        = Help
regions[navigation]  = Navigation bar
regions[highlighted] = Highlighted

regions[content]        = Content
regions[sidebar_first]  = First sidebar
regions[sidebar_second] = Second sidebar

regions[footer_firstcolumn]  = Footer first column
regions[footer_secondcolumn] = Footer second column
regions[footer_thirdcolumn]  = Footer third column
regions[bottom_firstcolumn]  = Page bottom first column
regions[bottom_secondcolumn] = Page bottom second column

regions[page_top]    = Page top    ; is required, don't delete
regions[page_bottom] = Page bottom ; is required, don't delete

; Features
features[] = logo
features[] = name
features[] = slogan
features[] = comment_user_picture
features[] = favicon
features[] = main_menu
features[] = secondary_menu

; Settings
settings[slsv_breadcrumb]           = yes
settings[slsv_breadcrumb_separator] = ' â€º '
